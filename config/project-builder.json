{
  "steps": [
    {
      "id": "projectName",
      "prompt": "Project name:",
      "type": "text",
      "validate": "required"
    },
    {
      "id": "projectType",
      "prompt": "Project type:",
      "type": "select",
      "options": [
        { "label": "Symfony", "value": "symfony" },
        { "label": "Next.js", "value": "nextjs" }
      ]
    },
    {
      "id": "symfonyAuth",
      "prompt": "Auth type:",
      "type": "select",
      "options": [
        { "label": "No auth", "value": "no-auth" },
        { "label": "Simple auth", "value": "simple-auth" }
      ],
      "when": { "projectType": "symfony" }
    }
  ]
}
